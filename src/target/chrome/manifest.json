{
  "manifest_version": 2,
  "name": "Sweatyboi",
  "version": "1.0",
  "description": "'Sweat' and 'Glisten' particle effects for your mouse cursor.",
  "homepage_url": "https://toadslick.github.io/sweaty-boi/",

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "permissions": ["storage"],

  "background": {
    "scripts": ["index.js"],
    "persistent": false
  },

  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
